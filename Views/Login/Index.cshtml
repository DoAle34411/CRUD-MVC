@model User
<link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
<div class="split left">
    <div class="centered">
        <div id="parallax-world-of-ugg">
            <h2 style="padding: 40px 0px 10px 0px; color:white">Libros con Limon y Sal</h2>
        </div>
    </div>
</div>
<div class="split right">
    <form method="post">
        <div class="centered">
            <div id="parallax-world-of-ugg">
                <section>
                    <div class="title">
                        <h1>Iniciar Sesion</h1>
                    </div>
                </section>
            </div>
        <div class="mb-3" style="padding: 20px 1px 10px">
            <label>Cedula:</label>
            <input asp-for="Cedula" class="form-control" type="number">
        </div>
        <div class="mb-3" style="padding: 20px 1px 40px">
            <label>Clave:</label>
            <input asp-for="Clave" class="form-control" type="password">
        </div>
            <div class="btn-group" role="group" aria-label="Basic example">
                <button type="submit" class="btn custom-btn-color">Iniciar Sesion</button>
                <a asp-action="SignUp" class="btn custom-btn-color-2">Registrate</a>
            </div>
        </div>
    </form>
</div> 
