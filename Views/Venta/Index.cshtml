@{
    ViewData["Title"] = "Generacion Renta Libros";
}
@{
    User user = ViewBag.User as User;
    Console.WriteLine(user.CodigoAcceso);
}
<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css">
</head>
@if (user.CodigoAcceso==1)
{
    <h1 class="text-center" style="font-family: 'Times New Roman', Times, serif; padding: 20px 10px 10px">No Cuenta con Permisos en esta cuenta. Intente con otra.</h1>
}
else if (user.CodigoAcceso == 3)
{
    <h1 class="text-center" style="font-family: 'Times New Roman', Times, serif; padding: 20px 10px 10px">No Cuenta con Permisos en esta cuenta. Intente con otra.</h1>
}
else if (user.CodigoAcceso==4)
{
    <h1 class="text-center" style="font-family: 'Times New Roman', Times, serif; padding: 20px 10px 10px">No Cuenta con Permisos en esta cuenta. Intente con otra.</h1>
}
else if (user.CodigoAcceso == 2)
{
    <div class="container custom-btn-color">
        <div class="row">
            <div class="col-4">
                <h1 text-white>Libros Con Limon Y Sal</h1>
            </div>
            <div class="col-1">
                <form method="post" asp-area="" asp-controller="Home" asp-action="Index">
                    <textarea name="user" style="display:none;">@Json.Serialize(user)</textarea>
                    <button type="submit" class="nav-link text-white custom-background-color" style="height:69px">Hogar</button>
                </form>
            </div>
            <div class="col-1">
                <form method="post" asp-area="" asp-controller="Producto" asp-action="Index">
                    <textarea name="user" style="display:none;">@Json.Serialize(user)</textarea>
                    <button type="submit" class="nav-link text-white custom-background-color" style="height:69px">Productos</button>
                </form>
            </div>
            <div class="col-1">
                <form method="post" asp-area="" asp-controller="Eventos" asp-action="Index">
                    <textarea name="user" style="display:none;">@Json.Serialize(user)</textarea>
                    <button type="submit" class="nav-link text-white custom-background-color" style="height:69px">Eventos</button>
                </form>
            </div>
            <div class="col-1">
                <form method="post" asp-area="" asp-controller="Home" asp-action="Privacy">
                    <textarea name="user" style="display:none;">@Json.Serialize(user)</textarea>
                    <button type="submit" class="nav-link text-white custom-background-color" style="height:69px">Privacidad</button>
                </form>
            </div>
            <div class="col-1">
                <form method="post" asp-area="" asp-controller="Venta" asp-action="Index">
                    <textarea name="user" style="display:none;">@Json.Serialize(user)</textarea>
                    <button type="submit" class="nav-link text-white custom-background-color" style="height:69px">Rentas</button>
                </form>
            </div>
            <div class="col-1">
                <button>
                    <a class="nav-link text-white custom-background-color" asp-controller="Login" asp-action="Index">Cerrar Sesion</a>
                </button>
            </div>
            <div class="col-2">
                <p>Que bueno verte de nuevo, @user.Nombres!</p>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="text-center" style="padding: 40px 50px 10px" ;>
            <h1 class="display-4">Acciones Renta Libros</h1>
            <p>En esta página se puede rentar o devolver un libro.</p>
        </div>
    </div>
    <div class="container">
        <div class="text-center">
            <div class="btn-group" role="group" aria-label="Basic example">
                <a asp-action="Retirar" asp-route-IdUsuario="@user.IdUsuario" class="btn custom-btn-color">Retirar Libro </a>
                <a asp-action="Devolver" asp-route-IdUsuario="@user.IdUsuario" class="btn custom-btn-color-2">Devolver Libro</a>
            </div>
        </div>
    </div>
}